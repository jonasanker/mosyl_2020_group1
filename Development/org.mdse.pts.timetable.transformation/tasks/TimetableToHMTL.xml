        <pathelement location="${ECLIPSE_WORKSPACE}/org.mdse.pts.timetable.transformation/bin"/>
        <pathelement location="${ECLIPSE_HOME}/plugins/org.eclipse.core.runtime_3.17.0.v20191122-2104.jar"/>
