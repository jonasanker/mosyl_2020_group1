    </path>

    <path id="org.mdse.pts.timetable.transformation.classpath">
        <path refid="org.mdse.pts.timetable.transformation.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.mdse.pts.timetable.transformation.libraryclasspath.alljars">
        <pathelement location="../org.mdse.pts.timetable.transformation/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.mdse.pts.timetable.transformation.classpath.alljars">
        <path refid="org.mdse.pts.timetable.transformation.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="TimetableToHMTL">
        <java classname="org.mdse.pts.timetable.transformation.TimetableToHMTL" classpathref="org.mdse.pts.timetable.transformation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="TimetableToHMTL.alljars">
        <java classname="org.mdse.pts.timetable.transformation.TimetableToHMTL" classpathref="org.mdse.pts.timetable.transformation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
